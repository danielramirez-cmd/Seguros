@model IEnumerable<SegurosAPI.DTOs.CatalogoDTO>
@{
    ViewData["Title"] = "Catalogos de Seguros";
    int num = 1;
}

<div class=" container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">@ViewData["Title"]</h1>
        <a href="@Url.Action("Create", "Catalogo")" class="btn btn-success ">
            <i class="fa-solid fa-plus"></i> Agregar nuevo Catalogo
        </a>
    </div>

    @*  @await Html.PartialAsync("_Alerts") *@

    <div class=" table-responsive">
        <table class="table table-striped table-hover table-bordered align-middle">
            <thead class="table-dark">
                @*  Encabezados  *@
            <th>#</th>
            <th>@Html.DisplayNameFor(m => m.Tipo)</th>
            <th>@Html.DisplayNameFor(m => m.Observaciones)</th>
          
            <th>Acciones</th>
            </thead>

            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(num++)</td>
                            <td>@item.Tipo</td>
                            <td>@item.Observaciones</td>
                          
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("Edit", "Catalogo", new { id = item.Id })" class="btn btn-sm btn-secondary m-2">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                    <a href="@Url.Action("Details", "Catalogo", new { id = item.Id })" class="btn btn-sm btn-info m-2">
                                        <i class="bi bi-eye"></i> Detalles
                                    </a>

                                    <a href="@Url.Action("ConfirmDelete", "Catalogo", new { id = item.Id })" class="btn btn-sm btn-danger m-2">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">No hay categorias disponibles</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

