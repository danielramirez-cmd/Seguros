@model SegurosAPI.DTOs.CatalogoDTO
@{
    ViewData["Title"] = "Editar Catalogo";
}

<div class="container mt-5">

    <div class="card shadow-lg rounded">
        <div class="card-header bg-secondary text-white text-center py-3">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>

        <div class="card-body p-4">
            @* @await Html.PartialAsync("_Alerts") *@

            <form method="post" class="p-3">

                <div class="mb-3">
                    <label asp-for="Tipo" class="form-label fs-5 fw-semibold"></label>
                    <input asp-for="Tipo" class="form-control form-control-lg" placeholder="Ingrese el Tipo" />
                    <span asp-validation-for="Tipo" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Observaciones" class="form-label fs-5 fw-semibold"></label>
                    <textarea asp-for="Observaciones" class="form-control form-control-lg" placeholder="Ingrese las observaciones"></textarea>
                    <span asp-validation-for="Observaciones" class="text-danger small"></span>
                </div>

                

                <div class="text-center mt-4">
                    <a href="@Url.Action("Index", "Catalogo")" class="btn btn-outline-secondary px-4 py-2">
                        <i class="fas fa-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-success px-4 py-2 ms-2">
                        <i class="fas fa-save"></i> Guardar cambios
                    </button>
                </div>


            </form>
        </div>
    </div>
</div>