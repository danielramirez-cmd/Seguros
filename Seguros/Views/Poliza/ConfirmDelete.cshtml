@model SegurosAPI.DTOs.PolizaDTO
@{
    ViewData["Title"] = "Eliminar Poliza";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded">
        <div class="card-header bg-secondary text-white text-center py-3">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>
        <div class="card-body p-4">
            <h5 class="text-center text-danger fw-bold">
                <i class="fas fa-exclamation-triangle"></i> ¿Estás seguro de que deseas eliminar esta Poliza?
            </h5>

            <div class="row mt-4">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.Nombre):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.ApPaterno):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.ApMaterno)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.ApMaterno):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.ApMaterno)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.Edad):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.Edad)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.PaisNacimiento):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.PaisNacimiento)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.Genero):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.Genero)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.Correo):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.Correo)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.MontoPrima):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.MontoPrima)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.Telefono):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.Telefono)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.Estatus):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.Estatus)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.FechaInicio):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.FechaInicio)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.FechaFinal):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.FechaFinal)</dd>

                    </dl>
                </div>



                <div class="text-center mt-4">
                    <a href="@Url.Action("Index", "Poliza")" class="btn btn-outline-secondary px-4 py-2">
                        <i class="fas fa-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" form="delete-form" class="btn btn-danger px-4 py-2 ms-2">
                        <i class="fas fa-trash-alt"></i> Eliminar
                    </button>
                </div>
            </div>
        </div>

        <form id="delete-form" method="post" action="@Url.Action("Delete", "Poliza", new { id = Model.Id })" class="d-none"></form>
    </div>
